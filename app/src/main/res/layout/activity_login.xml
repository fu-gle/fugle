<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#61CAFC"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/splash_test03"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/com_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    
    <TextView
        android:id="@+id/com_facebook_login"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="페이스북 로그인"
    android:gravity="center"
    android:textColor="#ffffffff"
    android:textSize="20dp"
    android:background="@drawable/round_box_facebook"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="이메일로 로그인"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:background="@drawable/round_box_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="15dp"
        android:gravity="right"
        android:linksClickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="30dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="넘어가자"
        android:id="@+id/nextBtn"/>


</LinearLayout>
