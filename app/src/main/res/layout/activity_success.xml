<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="150dp"
    >
    <ImageView
        android:id="@+id/user_profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/profile_circular_border_imageview"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/blueprofile"
        android:layout_gravity="center_horizontal"/>
    
    <TextView
        android:id="@+id/login_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Login Success"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/user_profile_photo"/>

        <Button
            android:layout_below="@+id/login_success"
            android:id="@+id/LogoutButton"
            android:text="|       카카오계정으로 로그아웃"
            android:gravity="left|center"
            android:textSize="17dp"
            android:textStyle="bold"
            android:background="@drawable/round_box_kakao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:onClick="onLogoutButtonClicked"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/kakaolink_btn_small_ov"
            android:drawablePadding="15dp"
            />


</RelativeLayout>