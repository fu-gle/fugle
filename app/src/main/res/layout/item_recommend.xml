<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="-2dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        android:id="@+id/recommendCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/thumbnailImg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:text="예상 별점 "
                    android:layout_above="@+id/title"
                    android:layout_alignLeft="@+id/title"
                    android:background="#9FFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prediction"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:layout_above="@+id/title"
                    android:layout_toRightOf="@+id/textView"
                    android:text="0.0"
                    android:background="#9FFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:id="@+id/title"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:layout_alignBottom="@+id/thumbnailImg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="25sp"
                    android:background="#9FFF"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tag"
                    android:layout_below="@+id/thumbnailImg"
                    android:text="선호하는 테그 #액션"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:id="@+id/friends"
                    android:text="오리, 개구리님 외 친구 7명이 봤어요"
                    android:layout_below="@+id/tag" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/textview_border"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/friends"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_transparent"
                    android:gravity="center"
                    android:textColor="#777"
                    android:textSize="16sp"
                    android:id="@+id/preference"
                    android:text="보고싶어요"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_transparent"
                    android:gravity="center"
                    android:textColor="#777"
                    android:textSize="16sp"
                    android:id="@+id/rating"
                    android:text="평가하기"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_transparent"
                    android:gravity="center"
                    android:textColor="#777"
                    android:textSize="16sp"
                    android:id="@+id/comment"
                    android:text="코멘트"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>