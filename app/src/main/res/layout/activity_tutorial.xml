<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rootLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteColor"
                android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/webtoon_ranking_logo"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/star_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="ooo님, \n툰데레에게 취향을 알려주세요."
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/star_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/star_text"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="지금껏 본 영화, 드라마에 별점을 매겨주세요."
        android:textSize="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/star_text2"
        android:layout_margin="30dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/go_star_ok"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/round_box_button"
            android:gravity="center"
            android:text="좋아요!"
            android:textColor="@color/whiteColor"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/go_star_no"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tutorial_button"
            android:gravity="center"
            android:text="나중에 할래요~"
            android:textColor="@color/selector_text"
            android:textSize="20dp"

            />
    </LinearLayout>
</RelativeLayout>