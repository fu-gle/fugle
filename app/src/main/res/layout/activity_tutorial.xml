<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rootLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2261CAFC"
                android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_example"
        android:layout_marginTop="100dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#4461CAFC"
        app:cardCornerRadius="10dp"
        >

        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical"
            android:elevation="5dp"
            android:background="#5561CAFC"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/star_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="ooo님, \n툰데레에게 취향을 알려주세요. \n지금껏 본 웹툰, 만화책에
        별점을 매겨주세요."
        android:textSize="25dp"
        android:layout_below="@+id/cardview_example"
        android:layout_marginBottom="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/star_text"
        android:orientation="vertical"
        android:layout_margin="30dp"
        >

        <Button
            android:id="@+id/go_star_ok"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="좋아요!"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/go_star_no"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="나중에 할래요~"
            android:textSize="20dp"
            />
    </LinearLayout>
</RelativeLayout>