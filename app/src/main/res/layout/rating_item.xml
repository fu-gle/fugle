<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        android:id="@+id/ratingCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/thumbnailImg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:id="@+id/title"
                    android:background="#9FFF"
                    android:layout_alignLeft="@+id/thumbnailImg"
                    android:layout_alignTop="@+id/thumbnailImg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:padding="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작가, 출판년도"
                    android:textSize="12sp"
                    android:textColor="#444"
                    android:id="@+id/description"
                    android:background="#9FFF"
                    android:layout_below="@+id/title"
                    android:layout_alignLeft="@+id/title"
                    android:padding="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장르"
                    android:textSize="12sp"
                    android:textColor="#444"
                    android:id="@+id/genre"
                    android:background="#9FFF"
                    android:layout_below="@+id/description"
                    android:layout_alignLeft="@+id/description"
                    android:padding="3dp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/starRatingBar"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:max="5"
                    android:id="@+id/ratingBar"
                    android:layout_alignBottom="@+id/thumbnailImg"
                    android:layout_alignRight="@+id/thumbnailImg"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
